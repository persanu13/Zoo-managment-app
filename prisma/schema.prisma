generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STAFF
  ADMIN
  SUPER_ADMIN
}

enum Sex {
  MALE
  FEMALE
  UNKNOWN
}

enum HealthStatus {
  HEALTHY
  OBSERVATION
  UNHEALTHY
}

model User {
  id       String @id @default(cuid())
  name     String
  password String
  email    String @unique
  role     Role   @default(STAFF)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Animal {
  id          String   @id @default(cuid())
  name        String // "Leo" (nume individual)
  species     String // "Panthera leo" (nume științific)
  commonName  String // "African Lion"
  age         Int // Vârsta în ani
  sex         Sex // MALE/FEMALE/UNKNOWN
  weight      Float? // Greutate kg
  imageUrl    String? // URL poză
  arrivalDate DateTime @default(now()) // Data sosirii

  // Status sănătate
  healthStatus HealthStatus @default(HEALTHY)

  // Relații cheie
  habitatId String?
  habitat   Habitat? @relation(fields: [habitatId], references: [id])

  // Track medical/feeding
  treatments Treatment[]
  feedings   Feeding[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Habitat {
  id          String  @id @default(cuid())
  number      Int     @unique
  name        String
  type        String
  capacity    Int
  coordinates Int[] // ex: [x1, y1, x2, y2, ...] pentru delimitarea pe harta
  color       String?
  closed      Boolean @default(true)

  animals Animal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Treatment {
  id        String   @id @default(cuid())
  animalId  String
  animal    Animal   @relation(fields: [animalId], references: [id])
  title     String // "Vaccination"
  notes     String?
  date      DateTime
  createdBy String // userId
}

model Feeding {
  id        String    @id @default(cuid())
  animalId  String
  animal    Animal    @relation(fields: [animalId], references: [id])
  foodType  String
  quantity  String
  scheduled DateTime
  fedAt     DateTime?
}
