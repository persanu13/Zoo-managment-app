generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STAFF
  ADMIN
  SUPER_ADMIN
}

enum Sex {
  MALE
  FEMALE
  UNKNOWN
}

enum HealthStatus {
  HEALTHY
  OBSERVATION
  UNHEALTHY
}

model User {
  id       String @id @default(cuid())
  name     String
  password String
  email    String @unique
  role     Role   @default(STAFF)

  treatments Treatment[] @relation("UserTreatments")
  feedings   Feeding[]   @relation("UserFeedings")

  tasksCreated  Task[] @relation("TaskCreatedBy")
  tasksAssigned Task[] @relation("TaskAssignedTo")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Animal {
  id          String   @id @default(cuid())
  name        String // "Leo" (nume individual)
  species     String // "Panthera leo" (nume științific)
  commonName  String // "African Lion"
  age         Int // Vârsta în ani
  sex         Sex // MALE/FEMALE/UNKNOWN
  weight      Float? // Greutate kg
  imageUrl    String? // URL poză
  arrivalDate DateTime @default(now()) // Data sosirii

  // Status sănătate
  healthStatus HealthStatus @default(HEALTHY)

  // Relații cheie
  habitatId String?
  habitat   Habitat? @relation(fields: [habitatId], references: [id])

  // Track medical/feeding
  treatments Treatment[]
  feedings   Feeding[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Habitat {
  id          String  @id @default(cuid())
  number      Int     @unique
  name        String
  type        String
  capacity    Int
  coordinates Int[] // ex: [x1, y1, x2, y2, ...] pentru delimitarea pe harta
  color       String?
  closed      Boolean @default(true)

  animals Animal[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tasks     Task[]
}

model Treatment {
  id String @id @default(cuid())

  animalId String
  animal   Animal @relation(fields: [animalId], references: [id])

  title String
  notes String?

  date DateTime

  createdById String
  createdBy   User   @relation("UserTreatments", fields: [createdById], references: [id])

  createdAt DateTime @default(now())
  tasks     Task[]
}

model Feeding {
  id String @id @default(cuid())

  animalId String
  animal   Animal @relation(fields: [animalId], references: [id])

  foodType  String
  quantity  String
  scheduled DateTime
  fedAt     DateTime?

  fedById String?
  fedBy   User?   @relation("UserFeedings", fields: [fedById], references: [id])

  createdAt DateTime @default(now())
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  BLOCKED
  DONE
  CANCELED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskType {
  GENERAL
  FEEDING
  CLEANING
  MEDICAL
  MAINTENANCE
  TRANSFER
  INVENTORY
}

// model Task
model Task {
  id String @id @default(cuid())

  title       String
  description String?
  type        TaskType @default(GENERAL)

  status   TaskStatus   @default(TODO)
  priority TaskPriority @default(MEDIUM)

  // planning
  dueDate     DateTime?
  startAt     DateTime?
  completedAt DateTime?

  // assignment
  assignedToId String?
  assignedTo   User?   @relation("TaskAssignedTo", fields: [assignedToId], references: [id], onDelete: SetNull)

  createdById String
  createdBy   User   @relation("TaskCreatedBy", fields: [createdById], references: [id], onDelete: Cascade)

  // optional links (când task-ul e despre ceva concret)
  animalId String?
  animal   Animal? @relation(fields: [animalId], references: [id], onDelete: SetNull)

  habitatId String?
  habitat   Habitat? @relation(fields: [habitatId], references: [id], onDelete: SetNull)

  // dacă ai model Treatment și vrei task-uri de tratament / follow-up
  treatmentId String?
  treatment   Treatment? @relation(fields: [treatmentId], references: [id], onDelete: SetNull)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, priority])
  @@index([dueDate])
  @@index([assignedToId])
  @@index([animalId])
  @@index([habitatId])
}
